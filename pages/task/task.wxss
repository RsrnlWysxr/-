/* pages/course/course.wxss */

page {
  height: 100%;
  background-color: #f1d5cd;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.zuoyetijiao{
  position: relative;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  width: 500rpx;
  height: 400rpx;
  align-items: space-between; 
  background-color: #fff;
  border: 2rpx dotted #000;
  border-radius: 32rpx;
  margin-bottom: -400rpx;
}

.tishi,
.radio-group label
{
  margin-top:10rpx;
  font-size: 28rpx;
  color: #666;
}

.tishi{
  width: 500rpx;
  position: absolute;
  bottom: 20rpx;
  margin-right: -250rpx;
}

radio{
  margin: 10rpx;
}

.row {
  margin-top: 450rpx;
  display: flex;
  flex-direction: row;
  width: 500rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.box {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 200rpx;
  width: 200rpx;
  border-radius: 5px;
}

.imge {
  width: 42rpx;
  height: 42rpx;
  padding-top: 45rpx;
}

.qiandao {
  background-color: #99bbff;
}

.jianyan {
  background-color: #e9eb94;
}

text {
  padding-top: 35rpx;
  font-size: 35rpx;
  text-align: center;
  font-weight: bold;
}

.jiaoshi {
  padding: 20rpx;
  width: 500rpx;
  height: 200rpx;
  background-color: #fff;
  border: 2rpx dotted #000;
  border-radius: 32rpx;
  color: #666;
  font-size: 28rpx;
  margin-top: 50rpx;
}