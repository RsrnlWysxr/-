<!-- pages/user/user.wxml -->
<view class="container">
    <image class="avater" src="/images/avater/avart{{avater}}.png"></image>
    <text class="name">{{name}}</text>
    <text class="welcome">微信理工大,为你而来</text>
    <view class="down">
        <view class='cource row'>
            <image class="icon" src="/images/user/cource.png"></image>
            <text>我的选课</text>
        </view>
        <view class="crdit row">
            <image class="icon" src="/images/user/crdit.png"></image>
            <text>学分统计</text>
        </view>
        <view class="score row">
            <image class="icon" src="/images/user/score.png"></image>
            <text>成绩查询</text>
        </view>
        <view class="config row">
            <image class="icon" src="/images/user/config.png"></image>
            <text>帮助与反馈</text>
        </view>
    </view>
</view>